{
    "compilerOptions": {
        "checkJs": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@app/*":  ["./src/*"],
            "@core/*":  ["./src/core/*"],
            "@game/*":  ["./src/game/*"],
            "@classes/*": ["./src/game/classes/*"],
            "@backend/*":  ["./src/game/backend/*"],
            "@test/*":  ["./src/test/*"],
            "@lib/*":  ["./lib/*"],
            "@res/*":  ["./res/*"]
        },
        "resolveJsonModule": true,
        "disableSizeLimit": true,
        "allowUmdGlobalAccess": true
    },
    "include": [
        "./src/**/*",
        "./lib/**/*",
        "./dev/workspace/*.d.ts"
    ],
    "exclude": ["node_modules"]
}
